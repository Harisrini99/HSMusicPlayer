<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:title="@string/theme"
        app:iconSpaceReserved="false">
        <Preference
            android:key="theme"
            android:summary="@string/theme_footer"
            android:title="@string/theme"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="accentColor"
            android:summary="@string/choose_accent_color"
            android:title="@string/accent_color"
            app:iconSpaceReserved="false" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="colorizeElementsAccordingToAlbumArt"
            android:summary="@string/enable_or_disable"
            android:title="@string/colorize_elements_according_to_album_art"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/playback"
        app:iconSpaceReserved="false">
        <SwitchPreference
            android:key="fade"
            android:summary="@string/enable_or_disable"
            android:title="@string/fade"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/notification"
        app:iconSpaceReserved="false">
        <SwitchPreference
            android:defaultValue="true"
            android:key="useMediaStyleNotification"
            android:summary="@string/enable_or_disable"
            android:title="@string/use_default_notification"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/headset"
        app:iconSpaceReserved="false">
        <SwitchPreference
            android:defaultValue="true"
            android:key="pauseOnDisconnect"
            android:summary="@string/enable_or_disable"
            android:title="@string/pause_on_disconnect"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Now Playing Style"
        app:iconSpaceReserved="false">

        <SwitchPreference
            android:defaultValue="false"
            android:key="circleImage"
            android:summary="@string/enable_or_disable"
            android:title="Circular Image"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/others"
        app:iconSpaceReserved="false">
        <Preference
            android:key="clearCache"
            android:title="@string/clear_cache"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>
</PreferenceScreen>