<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorPrimary"
    android:fitsSystemWindows="true">

    <music.hs.com.materialmusicv2.customviews.library.LibraryToolbar
        android:id="@+id/libraryToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    </music.hs.com.materialmusicv2.customviews.library.LibraryToolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/libraryToolbar">

        <FrameLayout
            android:id="@+id/elementsContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:windowBackground" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="64dp">

            <music.hs.com.materialmusicv2.customviews.library.LibraryController
                android:id="@+id/libraryController"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>
    </RelativeLayout>


</RelativeLayout>